<?xml version="1.0" encoding="ASCII"?>
<mvc:MVCModel
    xmi:version="2.0"
    xmlns:xmi="http://www.omg.org/XMI"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:mvc="http://co.edu.uniandes.csw.mvc/1.0"
    name="Usuarios"
    version="1">
  <models name="Usuario">
    <rootEntity
        name="Usuario">
      <attributes
          name="nombre"
          type="String"/>
      <attributes
          name="login"
          type="String"/>
      <attributes
          name="fechaNacimiento"
          type="Date"/>
      <attributes
          name="estado"
          type="Boolean"/>
      <attributes
          name="numeroDocumento"
          type="Long"/>
    </rootEntity>
  </models>
  <views name="ListaUsuario">
    <rootComponent
        name="listaUsuario"
        type="table"
        orientation="">
      <components
          xsi:type="mvc:UILabel"
          name="nombre"
          type="Column"
          value="//@models.0/@rootEntity/@attributes.0"
          text="Nombre"/>
      <components
          xsi:type="mvc:UILabel"
          name="login"
          type="Column"
          value="//@models.0/@rootEntity/@attributes.1"
          text="Login"/>
      <components
          xsi:type="mvc:UILabel"
          name="fechaNacimiento"
          type="Column"
          value="//@models.0/@rootEntity/@attributes.2"
          text="Fecha de Nacimiento"/>
      <components
          xsi:type="mvc:UILabel"
          name="estado"
          type="Column"
          value="//@models.0/@rootEntity/@attributes.3"
          text="Estado"/>
      <components
          xsi:type="mvc:UILabel"
          name="numeroDocumento"
          type="Column"
          value="//@models.0/@rootEntity/@attributes.4"
          text="Numero de Documento"/>
      <components
          xsi:type="mvc:UIActions"
          name="editar"
          type="link"/>
      <components
          xsi:type="mvc:UIActions"
          name="eliminar"
          type="link"/>
    </rootComponent>
  </views>
  <views name="EditarUsuario">
    <rootComponent
        name="editarUsuario"
        type="form">
      <components
          xsi:type="mvc:UIInput"
          name="nombre"
          type="text"
          value="//@models.0/@rootEntity/@attributes.0"/>
      <components
          xsi:type="mvc:UIInput"
          name="login"
          type="text"
          value="//@models.0/@rootEntity/@attributes.1"/>
      <components
          xsi:type="mvc:UIInput"
          name="fechaNacimiento"
          type="date"
          value="//@models.0/@rootEntity/@attributes.2"/>
      <components
          xsi:type="mvc:UIInput"
          name="estado"
          type="boolean"
          value="//@models.0/@rootEntity/@attributes.3"/>
      <components
          xsi:type="mvc:UIInput"
          name="numeroDocumento"
          type="text"
          value="//@models.0/@rootEntity/@attributes.4"/>
      <components
          xsi:type="mvc:UIActions"
          name="guardar"
          type="button"/>
      <components
          xsi:type="mvc:UIActions"
          name="cancelar"
          type="button"/>
    </rootComponent>
  </views>
  <controllers
      name="listaUsuarioCtrl">
    <actions
        name="listar"/>
    <actions
        name="editar"/>
    <actions
        name="eliminar"/>
    <views view="//@views.0"
        models="//@models.0"/>
  </controllers>
  <controllers
      name="editarUsuarioCtrl">
    <actions
        name="guardar"/>
    <actions
        name="cancelar"/>
    <views view="//@views.1"
        models="//@models.0"/>
  </controllers>
  <components
      controllers="//@controllers.0 //@controllers.1"
      name="Usuarios"/>
</mvc:MVCModel>
